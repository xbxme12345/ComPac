<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_list_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.huangy4.compac.Existing_List_Page">

    <ImageButton
        android:id="@+id/exit_item_list_page"
        android:contentDescription=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:layout_alignParentLeft="true"
        android:background="@null"
        android:padding="10sp"/>

    <TextView
        android:id="@+id/description_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_centerHorizontal="true"
        android:padding="7sp"
        android:textSize="20sp"/>

    <LinearLayout
        android:id="@+id/date_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/exit_item_list_page">
        <TextView
            android:id="@+id/start_end_date_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>

        <!--<TextView
            android:id="@+id/end_date_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/date_range"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/newListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

    </LinearLayout>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/description_value"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="23dp"
        android:layout_toStartOf="@+id/edit_button"
        android:text="Edit/Delete" />

    <ImageButton
        android:id="@+id/add_item_button"
        android:contentDescription=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_box_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:padding="10sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_del_label"
        android:text="Edit/Delete"
        android:layout_toStartOf="@+id/edit_button"/>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/exit_item_list_page"
        android:layout_toStartOf="@+id/edit_button" />

</RelativeLayout>
